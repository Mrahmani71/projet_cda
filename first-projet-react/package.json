{
  "name": "meteo-projet",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "MORMOR",
    "email": "MOR@mrah.fr",
    "url": "https://404notfound.com"
  },
  "description": "Meteo App",
  "maintainer": "Rahmani Mohammad",
  "homepage": "https://mrah.fr",
  "main": "public/electron.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "e:dev": "concurrently -k \"BROWSER=none npm run dev\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder",
    "hello": "electron ."
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-loading-skeleton": "^3.1.0",
    "react-redux": "^8.0.1",
    "react-toastify": "^9.0.1",
    "swiper": "^8.1.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@rollup/plugin-babel": "^5.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "electron": "^18.2.4",
    "electron-is-dev": "^2.0.0",
    "rpmbuild": "^0.0.23",
    "vite": "^2.9.7",
    "vite-plugin-babel": "^1.0.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.jamzi.quickstart",
    "linux": {
      "target": "deb"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "meteo_projet"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "darwin"
          ],
          "config": {
            "maintainer": "Rahmani Mohammad",
            "description": "Meteo App",
            "homepage": "https://mrah.fr"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}
